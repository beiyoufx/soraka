<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.soraka.admin.dao.MenuDAO">

    <select id="get" resultType="com.soraka.admin.domain.MenuDO" parameterType="java.lang.Long">
        SELECT
            <include refid="all_fields"/>
        FROM
            sys_menu
        WHERE
            id = #{id}
    </select>
    <sql id="all_fields">
        id,
        name,
        type,
        url,
        permission,
        ico,
        level,
        parent_id,
        sequence,
        status,
        create_time,
        modify_time
    </sql>
</mapper>

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.soraka.admin.dao.UserDAO">

    <select id="get" resultType="com.soraka.admin.model.domain.UserDO" parameterType="java.lang.Long">
        SELECT
            <include refid="all_fields"/>
        FROM
            sys_user
        WHERE
            sys_user.id = #{id}
    </select>
    <select id="getByUsername" resultType="com.soraka.admin.model.domain.UserDO">
        SELECT
            <include refid="all_fields"/>
        FROM
            sys_user
        WHERE
            sys_user.username = #{username}
    </select>
    <select id="getByMobilephone" resultType="com.soraka.admin.model.domain.UserDO">
        SELECT
            <include refid="all_fields"/>
        FROM
            sys_user
        WHERE
            sys_user.mobilephone = #{mobilephone}
    </select>
    <select id="getByEmail" resultType="com.soraka.admin.model.domain.UserDO">
        SELECT
            <include refid="all_fields"/>
        FROM
            sys_user
        WHERE
            sys_user.email = #{email}
    </select>
    <select id="find" resultType="com.soraka.admin.model.domain.UserDO" parameterType="com.soraka.admin.model.dto.QueryParam">
        SELECT
            <include refid="all_fields"/>
        FROM
            sys_user
        <where>
            <if test="queryText != null and queryText.trim() != ''">
                OR username = #{queryText}
                OR email = #{queryText}
                OR mobilephone = #{queryText}
                OR name = #{queryText}
            </if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                ORDER BY ${sort} ${order}
            </when>
            <otherwise>
                ORDER BY sys_user.id DESC
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            LIMIT #{offset}, #{limit}
        </if>
    </select>
    <select id="count" resultType="java.lang.Integer" parameterType="com.soraka.admin.model.dto.QueryParam">
        SELECT COUNT(*) FROM
        sys_user
        <where>
            <if test="queryText != null and queryText.trim() != ''">
                AND username = #{queryText}
                AND email = #{queryText}
                AND mobilephone = #{queryText}
                AND name = #{queryText}
            </if>
        </where>
    </select>
    <sql id="all_fields">
        sys_user.id,
        sys_user.username,
        sys_user.name,
        sys_user.mobilephone,
        sys_user.email,
        sys_user.password,
        sys_user.salt,
        sys_user.gender,
        sys_user.status,
        sys_user.dept_id,
        sys_user.create_user,
        sys_user.modify_user,
        sys_user.create_time,
        sys_user.modify_time,
        sys_user.deleted
    </sql>
</mapper>

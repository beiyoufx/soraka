<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.soraka.admin.dao.UserDAO">

    <select id="get" resultType="com.soraka.admin.domain.UserDO" parameterType="java.lang.Long">
        SELECT
            <include refid="all_fields"/>
        FROM
            sys_user
        WHERE
            id = #{id}
    </select>
    <sql id="all_fields">
        id,
        username,
        name,
        mobilephone,
        email,
        password,
        salt,
        gender,
        status,
        create_user,
        modify_user,
        create_time,
        modify_time,
        deleted
    </sql>
</mapper>
